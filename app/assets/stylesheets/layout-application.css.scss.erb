$padding: 10px;
$footerHeight: 40px;
$headerHeight: 46px;

$baseColor: #444;
$baseImagePath: "<%= asset_path '' %>";

@mixin ir($image, $width, $height) {
  background: transparent url(#{$baseImagePath}#{$image}) 0 0 no-repeat;
  width: #{$width}px;
  height: #{$height}px;
}

@mixin font($pixels) {
  font-size: #{$pixels}px;
  font-size: #{$pixels/10}rem;
}

@mixin spriteArrows($left, $top) {
  background: transparent url(<%= asset_path 'sprite-arrows.png' %>) $left $top no-repeat;
}

html {
  font: 62.5%/1.3 Helvetica, "Helvetica Neue", Arial, sans-serif;
}

html, body {
  height: 100%;
}

#container {
  min-height: 100%;
  text-align: center;
  
  header {
    margin: 0 auto;
    padding: $padding;
    position: relative;
    height: $headerHeight;
    background-color: $baseColor;

    h1 {
      @include ir("logo-77x46.png", 77, 46);
      position: absolute;
      top: $padding;
      right: $padding;
    }

    h2 {
      @include font(20);
      line-height: $headerHeight;
      color: #fff;
    }
  }
}

#main {
  padding-bottom: $footerHeight;
}

footer {
  @include font(12);
  position: relative;
  height: $footerHeight;
  top: -$footerHeight;
  border-top: 3px solid $baseColor;
  
  .back-to-top, .desktop-site {
    display: inline-block;
    padding: $padding;
  }
  
  .back-to-top {
    @include spriteArrows(10px, -230px);
    padding-left: $padding + 14px;
  }
  
  .desktop-site {
    position: absolute;
    right: 0;
    text-align: right;
  }
}