%h3= @author.full_name

= render :partial => 'authors/tabs', :locals => { :author => @author, :active => 'Guardian articles' }

%article.article-detail
  %h4= @fields['headline']
  %p.standfirst= @fields['standfirst']
  .article-info 
    <span class="byline">#{@fields['byline']}</span>, 
    <span class="publication">#{@fields['publication']}</span>,
    %time{:datetime => @article['webPublicationDate']}= format_string_date(@article['webPublicationDate'], :short)
    
  .article-body
    = raw(guardian_body(@fields['body']))
    
  %a.guardian-link{:href => @article['webUrl'], :"data-remote" => ""} View article on guardian.co.uk
      