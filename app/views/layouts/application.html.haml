%body{:class => @theme}
  #container
    %header
      %h1.ir 
        = link_to "Edinburgh International Book Festival", :controller => "home"
      %h2 Events
    #main{:role => "main"}
      = yield
  %footer
    %a.back-to-top{:href => "#container"} Back to top
    %a.desktop-site{:href => "http://www.edbookfest.co.uk"} Desktop site
  = javascript_include_tag :application
